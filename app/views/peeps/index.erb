<h1>Peeps</h1>

<form action='/peeps/new' method='post'>
  <label for='message'>
    Message: <input name='message' type='text' name ='message' value='<%= @peep.message %>'>
  </label>
  <br>
  <br>
  <input type='submit' value='Send peep'>
</form>


<ul id="peeps">
  <% @peeps.each do |peep| %>
    <li>
      Name: <%= peep.user.full_name %>
      User: <%= peep.user.user_name %>
      Message: <%= peep.message %>
      Time: <%= peep.created_at %>
    </li>
  <% end %>
</ul>
